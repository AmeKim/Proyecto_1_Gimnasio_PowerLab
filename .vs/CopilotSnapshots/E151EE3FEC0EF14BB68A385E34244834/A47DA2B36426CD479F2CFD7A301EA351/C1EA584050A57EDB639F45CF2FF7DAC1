#pragma once
#include <iostream>
#include <string>
#include <sstream>
#include "utiles.h"
#include "especialidad.h"
#include "instructor.h"
#include "cliente.h"

using namespace std;
class claseGrupal {
private:
    int codigo;
    string tipo;
    int capacidadMax;
    int cantidadActual;
    string salon;
    string horario;
    instructor* instructorPtr;
    cliente** clientes;
public:
    claseGrupal(int codigo, string tipo, int capacidadMax, string salon, string horario);
    ~claseGrupal();
    bool setInstructor(instructor* inst);
    bool matricularCliente(cliente* cli);
    void mostrarDetalle() const;
    void mostrarClientes() const;
    // Getters
    int getCodigo() const { return codigo; }
    string getTipo() const { return tipo; }
    int getCapacidadMax() const { return capacidadMax; }
    int getCantidadActual() const { return cantidadActual; }
    string getSalon() const { return salon; }
    string getHorario() const { return horario; }
    instructor* getInstructor() const { return instructorPtr; }
};

